---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import authors from '../../data/authors.json';
import { formatDateBR } from '../../utils/formatDateBR';
import { getReadingTimeLabel } from '../../utils/readingTime';
import { getAuthorProfile, getCoverPath, getPostSlug, slugifyTerm } from '../../utils/postHelpers';

const fallbackCover =
  'data:image/svg+xml;utf8,' +
  encodeURIComponent(`
<svg xmlns='http://www.w3.org/2000/svg' width='960' height='560' viewBox='0 0 960 560'>
  <rect width='960' height='560' fill='#E9E2D8'/>
  <text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle'
        fill='#6F6355' font-size='34' font-family='Arial, sans-serif'>
    Capa indisponível
  </text>
</svg>
`);

export async function getStaticPaths() {
  const posts = await getCollection('posts');

  return authors.map((author) => {
    const slug = slugifyTerm(author.name);
    const authorPosts = posts
      .filter((post) => post.data.author === author.id)
      .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

    return {
      params: { slug },
      props: { author, authorPosts, slug }
    };
  });
}

const { author, authorPosts, slug } = Astro.props;
const authorProfile = getAuthorProfile(author.id);
const canonical = `https://perspectiva-crista-site.pages.dev/autores/${slug}/`;
const authorImage = author.avatar || '/images/og-default.png';
const sameAs = Object.values(authorProfile.social ?? {}).filter(Boolean);

const personJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: author.name,
  image: new URL(authorImage, Astro.site ?? Astro.url).href,
  description: authorProfile.bio,
  url: canonical,
  sameAs,
  worksFor: {
    '@type': 'Organization',
    name: 'Perspectiva Cristã',
    url: 'https://perspectiva-crista-site.pages.dev/'
  }
};

const breadcrumbJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Início',
      item: 'https://perspectiva-crista-site.pages.dev/'
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Autores',
      item: 'https://perspectiva-crista-site.pages.dev/artigos/'
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: author.name,
      item: canonical
    }
  ]
};
---

<BaseLayout
  title={`${author.name} | Autores | Perspectiva Cristã`}
  description={authorProfile.bio}
  image={authorImage}
  canonical={canonical}
>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(personJsonLd)} />
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(breadcrumbJsonLd)} />

  <article class="author-page">
    <nav class="breadcrumb" aria-label="Breadcrumb">
      <a href="/">Início</a>
      <span aria-hidden="true">/</span>
      <a href="/artigos/">Autores</a>
      <span aria-hidden="true">/</span>
      <span>{author.name}</span>
    </nav>

    <header class="author-header">
      <img src={authorImage} alt={`Foto de ${author.name}`} width="120" height="120" loading="eager" />
      <div>
        <h1>{author.name}</h1>
        <p class="role">{authorProfile.role}</p>
        <p class="bio">{authorProfile.bio}</p>

        {sameAs.length > 0 && (
          <ul class="social-list" aria-label={`Redes de ${author.name}`}>
            {authorProfile.social.instagram && (
              <li><a href={authorProfile.social.instagram} rel="noopener noreferrer" target="_blank">Instagram</a></li>
            )}
            {authorProfile.social.linkedin && (
              <li><a href={authorProfile.social.linkedin} rel="noopener noreferrer" target="_blank">LinkedIn</a></li>
            )}
          </ul>
        )}
      </div>
    </header>

    <section aria-label={`Artigos de ${author.name}`}>
      <h2>Artigos de {author.name}</h2>

      {
        authorPosts.length > 0 ? (
          <ul class="posts-list">
            {authorPosts.map((post) => (
              <li>
                <PostCard
                  url={`/posts/${getPostSlug(post)}/`}
                  cover={getCoverPath(post.data.cover)}
                  title={post.data.title}
                  formattedDate={formatDateBR(post.data.date)}
                  author={author.name}
                  readingTime={getReadingTimeLabel(post.body)}
                  fallbackCover={fallbackCover}
                />
              </li>
            ))}
          </ul>
        ) : (
          <p class="empty">Ainda não há artigos publicados por este autor.</p>
        )
      }
    </section>
  </article>
</BaseLayout>

<style>
  .author-page { max-width: 900px; margin: 0 auto; display: grid; gap: 1.5rem; }

  .breadcrumb {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    font-family: var(--ui-font);
    font-size: 0.84rem;
    color: var(--text-soft);
  }

  .breadcrumb a { color: var(--accent); text-decoration: none; }

  .author-header {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1rem;
    align-items: start;
    padding: 1rem;
    border-radius: 1rem;
    border: 1px solid var(--line);
    background: var(--surface);
  }

  .author-header img {
    border-radius: 999px;
    object-fit: cover;
    border: 1px solid var(--line);
    background: var(--surface-soft);
  }

  h1 { margin: 0; font-size: clamp(2rem, 1.3rem + 2vw, 2.8rem); line-height: 1.15; }
  .role, .bio, .empty { margin: 0.45rem 0 0; font-family: var(--ui-font); color: var(--text-soft); line-height: 1.65; }

  .social-list {
    list-style: none;
    margin: 0.7rem 0 0;
    padding: 0;
    display: flex;
    gap: 0.55rem;
    flex-wrap: wrap;
  }

  .social-list a {
    display: inline-block;
    border: 1px solid var(--line);
    border-radius: 999px;
    padding: 0.3rem 0.6rem;
    text-decoration: none;
    font-family: var(--ui-font);
    font-size: 0.82rem;
    color: var(--text-soft);
    background: var(--surface-soft);
  }

  h2 { margin: 0 0 0.9rem; font-size: clamp(1.4rem, 1.2rem + 0.8vw, 1.8rem); }

  .posts-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .posts-list { grid-template-columns: repeat(2, minmax(0, 1fr)); }
  }

  @media (max-width: 640px) {
    .author-header { grid-template-columns: 1fr; }
  }
</style>
