---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { formatDateBR } from '../../utils/formatDateBR';
import { getReadingTimeLabel } from '../../utils/readingTime';
import { getAuthorProfile, getCoverPath, getPostSlug } from '../../utils/postHelpers';

export async function getStaticPaths() {
  const posts = await getCollection('posts');

  return posts.map((post) => ({
    params: { slug: getPostSlug(post) },
    props: { post }
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const {
  title,
  description,
  date,
  cover,
  author: authorId
} = post.data;

const author = getAuthorProfile(authorId);
const coverPath = getCoverPath(cover);
const readingTime = getReadingTimeLabel(post.body);
const slug = getPostSlug(post);
const canonical = `https://seudominio.com/posts/${slug}/`;
---

<BaseLayout
  title={`${title} | Perspectiva Cristã`}
  description={description}
  image={coverPath}
  type="article"
  canonical={canonical}
>
  <article class="post">
    <header class="post-header">
      <h1>{title}</h1>

      <p class="meta">
        {formatDateBR(date)} • {author.name} • {readingTime}
      </p>

      {cover && (
        <img
          src={coverPath}
          alt={`Capa do artigo ${title}`}
          width="960"
          height="560"
          loading="eager"
        />
      )}
    </header>

    <div class="content">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .post {
    max-width: 820px;
    margin: 0 auto;
  }

  .post-header {
    display: grid;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  h1 {
    margin: 0;
    font-size: clamp(2rem, 1.3rem + 2vw, 2.8rem);
    line-height: 1.15;
  }

  .meta {
    font-size: 0.95rem;
    color: var(--text-soft);
    font-family: var(--ui-font);
  }

  .post img {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    border-radius: 0.75rem;
  }

  .content {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .content p {
    margin: 1.4rem 0;
  }

  @media (min-width: 1024px) {
    .post {
      margin-left: 0;
      max-width: 900px;
    }
  }
</style>

