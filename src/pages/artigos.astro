---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { formatDateBR } from '../utils/formatDateBR';
import { getReadingTimeLabel } from '../utils/readingTime';
import authors from '../data/authors.json';

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

const getAuthorName = (authorId: string) =>
  authors.find((author) => author.id === authorId)?.name ?? 'Autor';

const getCoverPath = (cover: string | undefined) => {
  if (!cover) return '/images/post-cover.jpg';
  return cover.startsWith('/') ? cover : `/${cover}`;
};

const fallbackCover =
  "data:image/svg+xml;utf8," +
  encodeURIComponent(`
<svg xmlns='http://www.w3.org/2000/svg' width='960' height='560' viewBox='0 0 960 560'>
  <rect width='960' height='560' fill='#E9E2D8'/>
  <text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle'
        fill='#6F6355' font-size='34' font-family='Arial, sans-serif'>
    Capa indisponível
  </text>
</svg>
`);
---

<BaseLayout
  title="Artigos | Perspectiva Cristã"
  description="Explore os artigos do Perspectiva Cristã sobre fé, discipulado e vida cristã."
  canonical="https://seudominio.com/artigos/"
>
  <section class="articles-page" aria-label="Todos os artigos">
    <h1>Artigos</h1>
    <p class="intro">
      Todos os artigos publicados em Perspectiva Cristã.
    </p>

    <ul class="article-list">
      {posts.map((post) => (
        <li>
          <a
            href={`/posts/${post.data.slug ?? post.id}/`}
            class="article-card"
          >
            <img
              src={getCoverPath(post.data.cover)}
              alt={`Capa do artigo ${post.data.title}`}
              width="960"
              height="560"
              loading="lazy"
              onerror={`this.onerror=null;this.src='${fallbackCover}';`}
            />

            <div class="card-body">
              {post.data.category && (
                <p class="category">{post.data.category}</p>
              )}

              <h2 class="title">{post.data.title}</h2>

              {post.data.description && (
                <p class="description">{post.data.description}</p>
              )}

              <p class="meta">
                {formatDateBR(post.data.date)} • {getAuthorName(post.data.author)} • {getReadingTimeLabel(post.body)}
              </p>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>

<style>
  .articles-page {
    width: 100%;
  }

  h1 {
    margin: 0;
    font-size: clamp(2rem, 1.35rem + 2.2vw, 3rem);
    line-height: 1.15;
    letter-spacing: -0.012em;
    color: var(--text);
  }

  .intro {
    margin: 0.7rem 0 1.6rem;
    font-family: var(--ui-font);
    font-size: clamp(0.98rem, 0.92rem + 0.3vw, 1.08rem);
    line-height: 1.6;
    color: var(--text-soft);
    max-width: 65ch;
  }

  .article-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .article-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    border-radius: 0.85rem;
    border: 1px solid var(--line);
    background: var(--surface);
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    overflow: hidden;
    transition: transform 200ms ease, box-shadow 200ms ease, border-color 200ms ease;
  }

  .article-card:hover,
  .article-card:focus-visible {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--accent);
  }

  .article-card img {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    background: var(--surface-soft);
    border-bottom: 1px solid var(--line);
  }

  .card-body {
    display: grid;
    gap: 0.6rem;
    padding: 1rem;
  }

  .category {
    margin: 0;
    font-family: var(--ui-font);
    font-size: 0.78rem;
    line-height: 1.3;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--text-soft);
  }

  .title {
    margin: 0;
    font-family: var(--heading-font);
    font-size: clamp(1.16rem, 1.03rem + 0.56vw, 1.45rem);
    line-height: 1.35;
    color: var(--text);
  }

  .description {
    margin: 0;
    font-family: var(--ui-font);
    font-size: 0.95rem;
    line-height: 1.55;
    color: var(--text-soft);
  }

  .meta {
    margin: 0;
    font-family: var(--ui-font);
    font-size: 0.88rem;
    line-height: 1.5;
    color: var(--text-soft);
  }

  @media (min-width: 768px) {
    .article-list {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 1.1rem;
    }
  }

  @media (min-width: 1024px) {
    .article-list {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 1.2rem;
    }
  }
</style>

