---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import EditorialPostsGrid from '../../components/EditorialPostsGrid.astro';
import { slugifyTerm } from '../../utils/postHelpers';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const tags = [...new Set(posts.flatMap((post) => post.data.tags ?? []).filter(Boolean))];

  return tags.map((tag) => ({
    params: { tag: slugifyTerm(tag) },
    props: {
      tag,
      posts: posts
        .filter((post) => (post.data.tags ?? []).includes(tag))
        .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
    }
  }));
}

const { tag, posts } = Astro.props;
const tagSlug = slugifyTerm(tag);
const tagDescription = `Explore conteúdos relacionados à tag ${tag} com curadoria editorial e foco bíblico prático.`;
const canonical = `https://perspectiva-crista-site.pages.dev/tags/${tagSlug}/`;

const collectionJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: `Tag: ${tag}`,
  description: tagDescription,
  url: canonical
};

const fallbackCover =
  "data:image/svg+xml;utf8," +
  encodeURIComponent(`
<svg xmlns='http://www.w3.org/2000/svg' width='960' height='560' viewBox='0 0 960 560'>
  <rect width='960' height='560' fill='#E9E2D8'/>
  <text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle'
        fill='#6F6355' font-size='34' font-family='Arial, sans-serif'>
    Capa indisponível
  </text>
</svg>
`);
---

<BaseLayout
  title={`Tag: ${tag} | Perspectiva Cristã`}
  description={tagDescription}
  canonical={canonical}
>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(collectionJsonLd)} />

  <section class="taxonomy-page" aria-label={`Artigos com a tag ${tag}`}>
    <header>
      <h1>{tag}</h1>
      <p class="intro">{tagDescription}</p>
    </header>

    <EditorialPostsGrid posts={posts} fallbackCover={fallbackCover} />
  </section>
</BaseLayout>

<style>
  .taxonomy-page {
    width: 100%;
    display: grid;
    gap: 1.2rem;
  }

  header {
    display: grid;
    gap: 0.55rem;
    border: 1px solid var(--line);
    background: var(--surface);
    border-radius: 0.9rem;
    padding: 1rem;
  }

  h1 {
    margin: 0;
    font-size: clamp(2.1rem, 1.35rem + 2.2vw, 3.1rem);
    line-height: 1.15;
    letter-spacing: -0.012em;
    color: var(--text);
  }

  .intro {
    margin: 0;
    font-family: var(--ui-font);
    font-size: clamp(1rem, 0.92rem + 0.3vw, 1.1rem);
    line-height: 1.6;
    color: var(--text-soft);
    max-width: 65ch;
  }
</style>
