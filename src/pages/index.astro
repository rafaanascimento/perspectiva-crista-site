---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { formatDateBR } from '../utils/formatDateBR';
import authors from '../data/authors.json';

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

const featuredPost = posts[0];
const recentPosts = posts.slice(1);

const getAuthorName = (authorId: string) =>
  authors.find((author) => author.id === authorId)?.name ?? 'Autor';

const getCoverPath = (cover: string | undefined) => {
  if (!cover) return '/images/post-cover.jpg';
  return cover.startsWith('/') ? cover : `/${cover}`;
};

const fallbackCover =
  "data:image/svg+xml;utf8," +
  encodeURIComponent(`
<svg xmlns='http://www.w3.org/2000/svg' width='960' height='560' viewBox='0 0 960 560'>
  <rect width='960' height='560' fill='#E9E2D8'/>
  <text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle'
        fill='#6F6355' font-size='34' font-family='Arial, sans-serif'>
    Capa indisponível
  </text>
</svg>
`);
---

<BaseLayout title="Perspectiva Cristã">
  <section class="home-feed" aria-label="Conteúdo da página inicial">
    {
      featuredPost && (
        <section class="featured" aria-label="Artigo em destaque">
          <h2>Artigo em destaque</h2>
          <a class="featured-card" href={`/posts/${featuredPost.id}/`}>
            <img
              src={getCoverPath(
                featuredPost.data.cover
              )}
              alt={`Capa do artigo ${featuredPost.data.title}`}
              width="1200"
              height="675"
              loading="lazy"
              onerror={`this.onerror=null;this.src='${fallbackCover}';`}
            />
            <div class="featured-body">
              <h3>{featuredPost.data.title}</h3>
              <p class="meta">
                {formatDateBR(featuredPost.data.date)} •{' '}
                {getAuthorName(featuredPost.data.author)}
              </p>
            </div>
          </a>
        </section>
      )
    }

    {recentPosts.length > 0 && (
      <section class="recent" aria-label="Artigos recentes">
        <h2>Artigos recentes</h2>
        <div class="recent-grid">
          {
            recentPosts.map((post) => {
              const cover = getCoverPath(
                post.data.cover
              );

              return (
                <a class="card" href={`/posts/${post.id}/`}>
                  <img
                    src={cover}
                    alt={`Capa do artigo ${post.data.title}`}
                    width="960"
                    height="560"
                    loading="lazy"
                    onerror={`this.onerror=null;this.src='${fallbackCover}';`}
                  />
                  <div class="card-body">
                    <h3>{post.data.title}</h3>
                    <p class="meta">
                      {formatDateBR(post.data.date)} • {getAuthorName(post.data.author)}
                    </p>
                  </div>
                </a>
              );
            })
          }
        </div>
      </section>
    )}

    <section class="newsletter" aria-label="Assinatura de novidades">
      <div class="newsletter-inner">
        <h2>Receba nossas novidades</h2>
        <form class="newsletter-form" action="#" method="post">
          <label>
            Seu Primeiro Nome
            <input type="text" name="firstName" autocomplete="given-name" required />
          </label>

          <label>
            Seu Melhor E-mail
            <input type="email" name="email" autocomplete="email" required />
          </label>

          <button type="submit">Assinar</button>
        </form>
        <p class="note">
          Você pode cancelar a inscrição a qualquer momento. Para mais detalhes,
          consulte nossa Política de Privacidade.
        </p>
      </div>
    </section>
  </section>
</BaseLayout>

<style>
  .home-feed {
    display: grid;
    gap: clamp(2rem, 4vw, 3rem);
  }

  .featured h2,
  .recent h2,
  .newsletter h2 {
    margin: 0 0 1rem;
    font-family: var(--ui-font);
    font-size: clamp(0.82rem, 0.75rem + 0.2vw, 0.92rem);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--text-soft);
  }

  .featured-card,
  .card {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    border-radius: 1rem;
    border: 1px solid var(--line);
    background: var(--surface);
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease,
      border-color 0.2s ease, background-color 0.2s ease;
  }

  .featured-card:hover,
  .featured-card:focus-visible,
  .card:hover,
  .card:focus-visible {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: color-mix(in srgb, var(--line) 68%, var(--accent) 32%);
  }

  .featured-card img,
  .card img {
    width: 100%;
    display: block;
    object-fit: cover;
    background: var(--surface-soft);
  }

  .featured-card img {
    aspect-ratio: 16 / 8;
    border-bottom: 1px solid var(--line);
  }

  .featured-body,
  .card-body {
    padding: clamp(1rem, 1.5vw, 1.4rem);
  }

  .featured-body h3 {
    margin: 0;
    font-family: var(--heading-font);
    font-size: clamp(1.5rem, 1.1rem + 1.8vw, 2.2rem);
    line-height: 1.2;
    color: var(--text);
  }

  .meta {
    margin: 0.62rem 0 0;
    font-family: var(--ui-font);
    font-size: clamp(0.86rem, 0.82rem + 0.2vw, 0.94rem);
    line-height: 1.55;
    color: var(--text-soft);
  }

  .recent-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.4rem;
  }

  .card img {
    aspect-ratio: 16 / 9;
    border-bottom: 1px solid var(--line);
  }

  .card h3 {
    margin: 0;
    font-size: clamp(1.15rem, 1rem + 0.7vw, 1.48rem);
    line-height: 1.35;
    color: var(--text);
    font-family: var(--heading-font);
  }

  .newsletter-inner {
    width: 100%;
    max-width: 860px;
    padding: clamp(1.2rem, 1.8vw, 1.7rem);
    border: 1px solid var(--line);
    border-radius: 1rem;
    background: var(--surface);
    box-shadow: var(--shadow-sm);
  }

  .newsletter-form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    width: min(100%, 560px);
  }

  .newsletter-form label {
    display: grid;
    gap: 0.45rem;
    font-family: var(--ui-font);
    font-size: 0.87rem;
    color: var(--text-soft);
  }

  .newsletter-form input {
    width: 100%;
    border: 1px solid var(--line);
    border-radius: 0.6rem;
    background: var(--surface-soft);
    color: var(--text);
    font-family: var(--ui-font);
    font-size: 0.96rem;
    padding: 0.68rem 0.72rem;
  }

  .newsletter-form button {
    border: 1px solid color-mix(in srgb, var(--accent) 70%, var(--line) 30%);
    border-radius: 0.6rem;
    background: var(--accent);
    color: #fff;
    font-family: var(--ui-font);
    font-size: 0.95rem;
    font-weight: 600;
    padding: 0.72rem 1rem;
    justify-self: start;
    cursor: pointer;
    transition: transform 180ms ease, filter 180ms ease;
  }

  .newsletter-form button:hover {
    transform: translateY(-1px);
    filter: brightness(0.95);
  }

  .note {
    margin: 0.82rem 0 0;
    font-family: var(--ui-font);
    font-size: 0.82rem;
    line-height: 1.5;
    color: var(--text-soft);
    max-width: 76ch;
  }

  .dark .newsletter-form button {
    color: #1c130d;
  }

  @media (min-width: 1024px) {
    .recent-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 1.6rem;
    }
  }
</style>
