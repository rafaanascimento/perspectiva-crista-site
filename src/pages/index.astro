---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { formatDateBR } from '../utils/formatDateBR';
import authors from '../data/authors.json';

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

const getAuthorName = (authorId: string) =>
  authors.find((author) => author.id === authorId)?.name ?? 'Autor';

const getCoverPath = (cover: string | undefined) => {
  if (!cover) return '/images/post-cover.jpg';
  return cover.startsWith('/') ? cover : `/${cover}`;
};

const fallbackCover =
  "data:image/svg+xml;utf8," +
  encodeURIComponent(`
<svg xmlns='http://www.w3.org/2000/svg' width='960' height='560' viewBox='0 0 960 560'>
  <rect width='960' height='560' fill='#E9E2D8'/>
  <text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle'
        fill='#6F6355' font-size='34' font-family='Arial, sans-serif'>
    Capa indisponível
  </text>
</svg>
`);
---

<BaseLayout title="Perspectiva Cristã">
  <header class="hero">
    <h1 class="site-title">Perspectiva Cristã</h1>
    <p>Reflexões bíblicas, fé e propósito para o dia a dia.</p>
  </header>

  <section class="posts" aria-label="Lista de artigos">
    <h2>Artigos</h2>

    <div class="grid">
      {
        posts.map((post) => {
          const cover = getCoverPath(
            (post.data as { cover?: string; coverImage?: string }).cover ??
              post.data.coverImage
          );

          return (
            <a class="card" href={`/posts/${post.id}/`}>
              <img
                src={cover}
                alt={`Capa do artigo ${post.data.title}`}
                width="960"
                height="560"
                loading="lazy"
                onerror={`this.onerror=null;this.src='${fallbackCover}';`}
              />
              <div class="card-body">
                <h3>{post.data.title}</h3>
                <p class="meta">
                  {formatDateBR(post.data.date)} •{' '}
                  {getAuthorName(post.data.authorId)}
                </p>
              </div>
            </a>
          );
        })
      }
    </div>
  </section>

  <section class="newsletter" aria-label="Assinatura de novidades">
    <div class="newsletter-inner">
      <h2>Receba nossas novidades</h2>
      <form class="newsletter-form" action="#" method="post">
        <label>
          Seu Melhor E-mail
          <input type="email" name="email" autocomplete="email" required />
        </label>

        <label>
          Seu Primeiro Nome
          <input type="text" name="firstName" autocomplete="given-name" required />
        </label>

        <button type="submit">Assinar / Receber novidades</button>
      </form>
      <p class="note">
        Você pode cancelar a inscrição a qualquer momento. Para mais detalhes,
        consulte nossa Política de Privacidade.
      </p>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    margin-bottom: clamp(2rem, 2vw, 2.6rem);
  }

  .site-title {
    margin: 0;
    font-family: var(--heading-font);
    font-size: clamp(2.1rem, 1.25rem + 3vw, 3.5rem);
    line-height: 1.14;
    letter-spacing: -0.012em;
    color: var(--text);
  }

  .hero p {
    margin: 0.7rem 0 0;
    color: var(--text-soft);
    font-family: var(--ui-font);
    max-width: 64ch;
    font-size: clamp(1.01rem, 0.95rem + 0.4vw, 1.15rem);
    line-height: 1.6;
  }

  .posts h2,
  .newsletter h2 {
    margin: 0 0 1.1rem;
    font-family: var(--ui-font);
    font-size: 0.92rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--text-soft);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.8rem;
  }

  .card {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    border-radius: 1rem;
    border: 1px solid var(--line);
    background: var(--surface);
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease,
      border-color 0.2s ease, background-color 0.2s ease;
  }

  .card:hover,
  .card:focus-visible {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: color-mix(in srgb, var(--line) 68%, var(--accent) 32%);
  }

  .card:focus-visible {
    outline: 3px solid var(--focus);
    outline-offset: 3px;
  }

  .card img {
    display: block;
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    background: var(--surface-soft);
    border-bottom: 1px solid var(--line);
  }

  .card-body {
    padding: 1.15rem;
  }

  .card h3 {
    margin: 0;
    font-size: clamp(1.18rem, 1.02rem + 0.7vw, 1.48rem);
    line-height: 1.35;
    color: var(--text);
    font-family: var(--heading-font);
  }

  .meta {
    margin: 0.58rem 0 0;
    font-family: var(--ui-font);
    font-size: 0.9rem;
    line-height: 1.45;
    color: var(--text-soft);
  }

  .newsletter {
    margin-top: clamp(2.2rem, 3vw, 3.4rem);
  }

  .newsletter-inner {
    max-width: 820px;
    padding: clamp(1.2rem, 1.6vw, 1.6rem);
    border: 1px solid var(--line);
    border-radius: 1rem;
    background: var(--surface);
    box-shadow: var(--shadow-sm);
  }

  .newsletter-form {
    display: grid;
    grid-template-columns: 1fr 1fr auto;
    gap: 0.95rem;
    align-items: end;
  }

  .newsletter-form label {
    display: grid;
    gap: 0.45rem;
    font-family: var(--ui-font);
    font-size: 0.87rem;
    color: var(--text-soft);
  }

  .newsletter-form input {
    width: 100%;
    border: 1px solid var(--line);
    border-radius: 0.6rem;
    background: var(--surface-soft);
    color: var(--text);
    font-family: var(--ui-font);
    font-size: 0.96rem;
    padding: 0.68rem 0.72rem;
  }

  .newsletter-form button {
    border: 1px solid color-mix(in srgb, var(--accent) 70%, var(--line) 30%);
    border-radius: 0.6rem;
    background: var(--accent);
    color: #fff;
    font-family: var(--ui-font);
    font-size: 0.95rem;
    font-weight: 600;
    padding: 0.72rem 1rem;
    cursor: pointer;
    transition: transform 180ms ease, filter 180ms ease;
  }

  .newsletter-form button:hover {
    transform: translateY(-1px);
    filter: brightness(0.95);
  }

  .note {
    margin: 0.82rem 0 0;
    font-family: var(--ui-font);
    font-size: 0.82rem;
    line-height: 1.5;
    color: var(--text-soft);
    max-width: 76ch;
  }

  .dark .newsletter-form button {
    color: #1c130d;
  }

  @media (max-width: 960px) {
    .newsletter-form {
      grid-template-columns: 1fr;
    }

    .newsletter-form button {
      justify-self: start;
    }
  }
</style>
