---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { formatDateBR } from '../utils/formatDateBR';
import authors from '../data/authors.json';

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

const getAuthorName = (authorId: string) =>
  authors.find((author) => author.id === authorId)?.name ?? 'Autor';

const getCoverPath = (cover: string | undefined) => {
  if (!cover) return '/images/post-cover.jpg';
  return cover.startsWith('/') ? cover : `/${cover}`;
};

const fallbackCover =
  "data:image/svg+xml;utf8," +
  encodeURIComponent(`
<svg xmlns='http://www.w3.org/2000/svg' width='960' height='560' viewBox='0 0 960 560'>
  <rect width='960' height='560' fill='#E9E2D8'/>
  <text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle'
        fill='#6F6355' font-size='34' font-family='Arial, sans-serif'>
    Capa indisponível
  </text>
</svg>
`);
---

<BaseLayout title="Perspectiva Cristã">
  <header class="hero">
    <h1 class="site-title">Perspectiva Cristã</h1>
    <p>Reflexões bíblicas, fé e propósito para o dia a dia.</p>
  </header>

  <section class="posts" aria-label="Lista de artigos">
    <h2>Artigos</h2>

    <div class="grid">
      {
        posts.map((post) => {
          const cover = getCoverPath(
            (post.data as { cover?: string; coverImage?: string }).cover ??
              post.data.coverImage
          );

          return (
            <a class="card" href={`/posts/${post.id}/`}>
              <img
                src={cover}
                alt={`Capa do artigo ${post.data.title}`}
                width="960"
                height="560"
                loading="lazy"
                onerror={`this.onerror=null;this.src='${fallbackCover}';`}
              />
              <div class="card-body">
                <h3>{post.data.title}</h3>
                <p class="meta">
                  {formatDateBR(post.data.date)} •{' '}
                  {getAuthorName(post.data.authorId)}
                </p>
              </div>
            </a>
          );
        })
      }
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    margin-bottom: clamp(2.2rem, 1.7rem + 2vw, 3rem);
  }

  .site-title {
    margin: 0;
    font-size: clamp(2.2rem, 1.25rem + 3vw, 3.45rem);
    line-height: 1.1;
    letter-spacing: -0.014em;
    color: var(--text-strong);
    text-wrap: balance;
  }

  .hero p {
    margin: 0.75rem 0 0;
    color: var(--muted);
    max-width: 62ch;
    font-size: clamp(1.05rem, 1rem + 0.45vw, 1.2rem);
    line-height: 1.65;
  }

  .posts h2 {
    margin: 0 0 1rem;
    font-size: 0.95rem;
    font-family: var(--ui-font);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--muted);
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.2rem;
  }

  .card {
    display: block;
    overflow: hidden;
    border-radius: 1rem;
    border: 1px solid var(--line);
    background: var(--surface);
    text-decoration: none;
    box-shadow: var(--shadow-sm);
    transition: transform 200ms ease, box-shadow 200ms ease,
      border-color 200ms ease, background-color 200ms ease;
  }

  .card:hover,
  .card:focus-visible {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
    border-color: color-mix(in srgb, var(--line) 68%, var(--accent) 32%);
  }

  .card:focus-visible {
    outline: 3px solid var(--focus);
    outline-offset: 3px;
  }

  .card img {
    display: block;
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    background: var(--surface-2);
    border-bottom: 1px solid var(--line);
    transition: border-color 200ms ease, background-color 200ms ease;
  }

  .card-body {
    padding: 1.1rem 1.1rem 1.2rem;
  }

  .card h3 {
    margin: 0;
    font-size: clamp(1.26rem, 1.04rem + 0.8vw, 1.56rem);
    line-height: 1.35;
    color: var(--text-strong);
  }

  .meta {
    margin: 0.6rem 0 0;
    font-family: var(--ui-font);
    font-size: 0.92rem;
    line-height: 1.5;
    color: var(--muted);
  }

  @media (min-width: 700px) {
    .grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 1.3rem;
    }
  }

  @media (min-width: 1024px) {
    .grid {
      gap: 1.4rem;
    }
  }
</style>
