---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <script is:inline>
      (() => {
        const storedTheme = localStorage.getItem('perspectiva-theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if ((storedTheme ?? (prefersDark ? 'dark' : 'light')) === 'dark') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>

    <style>
      :root {
        color-scheme: light;
        --bg: #f5efe8;
        --surface: #fffdf9;
        --surface-soft: #f7f1e8;
        --text: #1f1812;
        --text-soft: #5b4f43;
        --line: #ccbca9;
        --accent: #5c432f;
        --accent-hover: #3b2b1f;
        --focus: #0f62fe;
        --shadow-sm: 0 4px 14px rgba(43, 29, 18, 0.08);
        --shadow-lg: 0 16px 34px rgba(43, 29, 18, 0.16);
        --ui-font: 'Inter', 'Avenir Next', 'Segoe UI', Roboto, sans-serif;
        --heading-font: 'Iowan Old Style', 'Palatino Linotype', Palatino,
          'Times New Roman', serif;
      }

      .dark {
        color-scheme: dark;
        --bg: #14100d;
        --surface: #1e1712;
        --surface-soft: #251d16;
        --text: #f3e7d8;
        --text-soft: #d2bda7;
        --line: #4e3f31;
        --accent: #f7c58e;
        --accent-hover: #ffe2c0;
        --focus: #7eb7ff;
        --shadow-sm: 0 4px 14px rgba(0, 0, 0, 0.3);
        --shadow-lg: 0 18px 38px rgba(0, 0, 0, 0.46);
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        background: var(--bg);
        color: var(--text);
        font-family: var(--heading-font);
        font-size: 1.0625rem;
        line-height: 1.7;
        text-rendering: optimizeLegibility;
        transition: background-color 220ms ease, color 220ms ease;
      }

      .container {
        width: min(1200px, 100% - clamp(1.1rem, 3vw, 2.8rem));
        margin: 0 auto;
      }

      .site-header {
        border-bottom: 1px solid var(--line);
      }

      .nav-shell {
        height: clamp(70px, 7vw, 86px);
        background: color-mix(in srgb, var(--surface) 82%, transparent 18%);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-bottom: 1px solid color-mix(in srgb, var(--line) 82%, transparent 18%);
      }

      .nav-inner {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
      }

      .site-nav {
        display: inline-flex;
        align-items: center;
        gap: clamp(0.55rem, 1.4vw, 1rem);
        font-family: var(--ui-font);
      }

      .site-nav a {
        text-decoration: none;
        color: var(--text-soft);
        font-size: 0.93rem;
        font-weight: 600;
        letter-spacing: 0.01em;
        padding: 0.36rem 0.66rem;
        border-radius: 999px;
        border: 1px solid transparent;
        transition: color 180ms ease, border-color 180ms ease,
          background-color 180ms ease;
      }

      .site-nav a:hover,
      .site-nav a:focus-visible {
        color: var(--text);
        border-color: var(--line);
        background: var(--surface-soft);
      }

      .theme-toggle {
        display: inline-flex;
        align-items: center;
        gap: 0.45rem;
        border: 1px solid var(--line);
        border-radius: 999px;
        background: var(--surface-soft);
        color: var(--text);
        font-family: var(--ui-font);
        font-size: 0.87rem;
        font-weight: 600;
        padding: 0.46rem 0.84rem;
        cursor: pointer;
        transition: transform 200ms ease, box-shadow 200ms ease,
          border-color 200ms ease, background-color 200ms ease;
      }

      .theme-toggle:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-sm);
      }

      .theme-toggle .icon {
        line-height: 1;
      }

      .hero-media {
        width: 100%;
        height: clamp(260px, 38vw, 420px);
        max-height: 420px;
      }

      .hero-media img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        display: block;
      }

      main.container {
        padding: clamp(1.7rem, 2.5vw, 3rem) 0;
      }

      .site-footer {
        margin-top: 1rem;
        border-top: 1px solid var(--line);
        background: var(--surface);
        transition: border-color 220ms ease, background-color 220ms ease;
      }

      .footer-wrap {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        padding: 1.35rem 0 1.55rem;
      }

      .footer-copy {
        display: grid;
        gap: 0.2rem;
      }

      .footer-copy small {
        color: var(--text-soft);
        font-family: var(--ui-font);
      }

      .footer-links {
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        font-family: var(--ui-font);
        font-size: 0.95rem;
      }

      .footer-links a {
        color: var(--accent);
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: color 180ms ease, border-color 180ms ease;
      }

      .footer-links a:hover,
      .footer-links a:focus-visible {
        color: var(--accent-hover);
        border-color: currentColor;
      }

      a {
        color: var(--accent);
        text-decoration-thickness: 0.09em;
        text-underline-offset: 0.16em;
      }

      a:hover,
      a:focus-visible {
        color: var(--accent-hover);
      }

      :where(a, button, input):focus-visible {
        outline: 3px solid var(--focus);
        outline-offset: 3px;
        border-radius: 0.4rem;
      }

      @media (min-width: 1024px) {
        .hero-media {
          height: clamp(420px, 34vw, 520px);
          max-height: 520px;
        }
      }

      @media (max-width: 900px) {
        .nav-inner {
          flex-wrap: wrap;
          row-gap: 0.55rem;
        }
      }

      @media (max-width: 760px) {
        body {
          font-size: 1rem;
        }

        .nav-shell {
          height: auto;
          min-height: 70px;
          padding: 0.6rem 0;
        }

        .nav-inner {
          align-items: flex-start;
          flex-direction: column;
        }

        .site-nav {
          flex-wrap: wrap;
        }

        .hero-media {
          height: clamp(260px, 56vw, 340px);
          max-height: 340px;
        }

        .footer-wrap {
          align-items: flex-start;
          flex-direction: column;
        }
      }
    </style>
  </head>

  <body>
    <header class="site-header">
      <div class="nav-shell">
        <div class="container nav-inner">
          <nav class="site-nav" aria-label="NavegaÃ§Ã£o principal">
            <a href="/">InÃ­cio</a>
            <a href="/artigos">Artigos</a>
          </nav>

          <button
            type="button"
            class="theme-toggle"
            id="theme-toggle"
            aria-label="Alternar modo noturno"
            aria-pressed="false"
          >
            <span class="icon" aria-hidden="true">ðŸŒ™</span>
            <span class="label">Modo Noturno</span>
          </button>
        </div>
      </div>

      <div class="hero-media">
        <img
          src="/images/header-art.png"
          alt="Arte de cabeÃ§alho do site Perspectiva CristÃ£"
          loading="eager"
        />
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container footer-wrap">
        <div class="footer-copy">
          <small>Â© 2026 Perspectiva CristÃ£</small>
          <small>Desenvolvido por Rafael Nascimento</small>
        </div>
        <nav class="footer-links" aria-label="Links sociais">
          <a
            href="https://github.com/rafaanascimento"
            target="_blank"
            rel="noreferrer noopener"
          >
            GitHub
          </a>
          <a
            href="https://www.linkedin.com/in/rafael-nascimento-260355156/"
            target="_blank"
            rel="noreferrer noopener"
          >
            LinkedIn
          </a>
        </nav>
      </div>
    </footer>

    <script is:inline>
      (() => {
        const STORAGE_KEY = 'perspectiva-theme';
        const root = document.documentElement;
        const toggle = document.getElementById('theme-toggle');

        if (!toggle) return;

        const label = toggle.querySelector('.label');
        const icon = toggle.querySelector('.icon');

        const setTheme = (theme) => {
          const isDark = theme === 'dark';
          root.classList.toggle('dark', isDark);
          toggle.setAttribute('aria-pressed', String(isDark));
          if (label) label.textContent = isDark ? 'Modo Claro' : 'Modo Noturno';
          if (icon) icon.textContent = isDark ? 'â˜€ï¸' : 'ðŸŒ™';
        };

        const stored = localStorage.getItem(STORAGE_KEY);
        const preferred =
          stored ||
          (window.matchMedia('(prefers-color-scheme: dark)').matches
            ? 'dark'
            : 'light');

        setTheme(preferred);

        toggle.addEventListener('click', () => {
          const nextTheme = root.classList.contains('dark') ? 'light' : 'dark';
          setTheme(nextTheme);
          localStorage.setItem(STORAGE_KEY, nextTheme);
        });
      })();
    </script>
  </body>
</html>
