---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <script is:inline>
      (() => {
        const storedTheme = localStorage.getItem('perspectiva-theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if ((storedTheme ?? (prefersDark ? 'dark' : 'light')) === 'dark') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>

    <style>
      :root {
        color-scheme: light;
        --bg: #f5efe8;
        --surface: #fffdf9;
        --surface-soft: #f7f1e8;
        --text: #1f1812;
        --text-soft: #5b4f43;
        --line: #ccbca9;
        --accent: #5c432f;
        --accent-hover: #3b2b1f;
        --focus: #0f62fe;
        --shadow-sm: 0 4px 14px rgba(43, 29, 18, 0.08);
        --shadow-lg: 0 16px 34px rgba(43, 29, 18, 0.16);
        --ui-font: 'Inter', 'Avenir Next', 'Segoe UI', Roboto, sans-serif;
        --heading-font: 'Iowan Old Style', 'Palatino Linotype', Palatino,
          'Times New Roman', serif;
      }

      .dark {
        color-scheme: dark;
        --bg: #14100d;
        --surface: #1e1712;
        --surface-soft: #251d16;
        --text: #f3e7d8;
        --text-soft: #d2bda7;
        --line: #4e3f31;
        --accent: #f7c58e;
        --accent-hover: #ffe2c0;
        --focus: #7eb7ff;
        --shadow-sm: 0 4px 14px rgba(0, 0, 0, 0.3);
        --shadow-lg: 0 18px 38px rgba(0, 0, 0, 0.46);
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        background: var(--bg);
        color: var(--text);
        font-family: var(--heading-font);
        font-size: 1.0625rem;
        line-height: 1.7;
        text-rendering: optimizeLegibility;
        transition: background-color 220ms ease, color 220ms ease;
      }

      .container {
        width: min(1200px, 100% - clamp(1.1rem, 3vw, 2.8rem));
        margin: 0 auto;
      }

      .site-header {
        border-bottom: 1px solid var(--line);
        background: color-mix(in srgb, var(--surface) 90%, var(--bg) 10%);
        transition: border-color 220ms ease, background-color 220ms ease;
      }

      .site-header .container {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        gap: 0.8rem;
        padding: clamp(1rem, 2vw, 1.5rem) 0;
      }

      .brand {
        grid-column: 2;
        margin: 0;
      }

      .brand-link {
        font-family: var(--heading-font);
        font-size: clamp(1.8rem, 1.25rem + 2.2vw, 3.05rem);
        font-weight: 700;
        line-height: 1.2;
        letter-spacing: 0.018em;
        color: var(--text);
        text-align: center;
        text-decoration: none;
        display: inline-block;
      }

      .theme-toggle {
        grid-column: 3;
        justify-self: end;
        display: inline-flex;
        align-items: center;
        gap: 0.45rem;
        border: 1px solid var(--line);
        border-radius: 999px;
        background: var(--surface-soft);
        color: var(--text);
        font-family: var(--ui-font);
        font-size: 0.87rem;
        font-weight: 600;
        padding: 0.46rem 0.84rem;
        cursor: pointer;
        transition: transform 200ms ease, box-shadow 200ms ease,
          border-color 200ms ease, background-color 200ms ease, color 200ms ease;
      }

      .theme-toggle:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-sm);
      }

      .theme-toggle .icon {
        line-height: 1;
      }

      main.container {
        padding: clamp(1.7rem, 2.5vw, 3rem) 0;
      }

      .site-footer {
        margin-top: 1rem;
        border-top: 1px solid var(--line);
        background: var(--surface);
        transition: border-color 220ms ease, background-color 220ms ease;
      }

      .footer-wrap {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        padding: 1.35rem 0 1.55rem;
      }

      .footer-copy {
        display: grid;
        gap: 0.2rem;
      }

      .footer-copy small {
        color: var(--text-soft);
        font-family: var(--ui-font);
      }

      .footer-links {
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        font-family: var(--ui-font);
        font-size: 0.95rem;
      }

      .footer-links a {
        color: var(--accent);
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: color 180ms ease, border-color 180ms ease;
      }

      .footer-links a:hover,
      .footer-links a:focus-visible {
        color: var(--accent-hover);
        border-color: currentColor;
      }

      a {
        color: var(--accent);
        text-decoration-thickness: 0.09em;
        text-underline-offset: 0.16em;
      }

      a:hover,
      a:focus-visible {
        color: var(--accent-hover);
      }

      :where(a, button, input):focus-visible {
        outline: 3px solid var(--focus);
        outline-offset: 3px;
        border-radius: 0.4rem;
      }

      @media (max-width: 760px) {
        body {
          font-size: 1rem;
        }

        .site-header .container {
          grid-template-columns: 1fr auto;
          row-gap: 0.75rem;
        }

        .brand {
          grid-column: 1 / -1;
          text-align: center;
        }

        .brand-link {
          font-size: clamp(1.65rem, 1.25rem + 3vw, 2.45rem);
        }

        .theme-toggle {
          grid-column: 2;
          justify-self: end;
        }

        .footer-wrap {
          align-items: flex-start;
          flex-direction: column;
        }
      }
    </style>
  </head>

  <body>
    <header class="site-header">
      <div class="container">
        <p class="brand">
          <a class="brand-link" href="/">Perspectiva CristÃ£</a>
        </p>
        <button
          type="button"
          class="theme-toggle"
          id="theme-toggle"
          aria-label="Alternar modo noturno"
          aria-pressed="false"
        >
          <span class="icon" aria-hidden="true">ðŸŒ™</span>
          <span class="label">Modo Noturno</span>
        </button>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container footer-wrap">
        <div class="footer-copy">
          <small>Â© 2026 Perspectiva CristÃ£</small>
          <small>Desenvolvido por Rafael</small>
        </div>
        <nav class="footer-links" aria-label="Links sociais">
          <a
            href="https://github.com/rafaanascimento"
            target="_blank"
            rel="noreferrer noopener"
          >
            GitHub
          </a>
          <a
            href="https://www.linkedin.com/in/rafael-nascimento-260355156/"
            target="_blank"
            rel="noreferrer noopener"
          >
            LinkedIn
          </a>
        </nav>
      </div>
    </footer>

    <script is:inline>
      (() => {
        const STORAGE_KEY = 'perspectiva-theme';
        const root = document.documentElement;
        const toggle = document.getElementById('theme-toggle');

        if (!toggle) return;

        const label = toggle.querySelector('.label');
        const icon = toggle.querySelector('.icon');

        const setTheme = (theme) => {
          const isDark = theme === 'dark';
          root.classList.toggle('dark', isDark);
          toggle.setAttribute('aria-pressed', String(isDark));
          if (label) label.textContent = isDark ? 'Modo Claro' : 'Modo Noturno';
          if (icon) icon.textContent = isDark ? 'â˜€ï¸' : 'ðŸŒ™';
        };

        const stored = localStorage.getItem(STORAGE_KEY);
        const preferred =
          stored ||
          (window.matchMedia('(prefers-color-scheme: dark)').matches
            ? 'dark'
            : 'light');

        setTheme(preferred);

        toggle.addEventListener('click', () => {
          const nextTheme = root.classList.contains('dark') ? 'light' : 'dark';
          setTheme(nextTheme);
          localStorage.setItem(STORAGE_KEY, nextTheme);
        });
      })();
    </script>
  </body>
</html>
