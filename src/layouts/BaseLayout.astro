---
interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
  canonical?: string;
  preloadImage?: string;
}

const {
  title,
  description = 'Reflex√µes b√≠blicas, f√© e prop√≥sito para o dia a dia.',
  image = '/images/og-default.png',
  type = 'website',
  canonical,
  preloadImage
} = Astro.props;

const baseUrl = Astro.site ?? Astro.url;
const canonicalPath = canonical ? new URL(canonical, baseUrl).pathname : Astro.url.pathname;
const canonicalUrl = new URL(canonicalPath, baseUrl).href;
const imageUrl = new URL(image || '/images/og-default.png', baseUrl).href;
const preloadImageUrl = preloadImage ? new URL(preloadImage, baseUrl).href : null;

const organizationJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'Perspectiva Crist√£',
  url: 'https://perspectiva-crista-site.pages.dev/',
  logo: 'https://perspectiva-crista-site.pages.dev/images/og-default.png',
  sameAs: ['https://www.instagram.com/', 'https://www.linkedin.com/'],
  description: 'Blog crist√£o focado em discipulado, forma√ß√£o b√≠blica e crescimento espiritual.'
};

const websiteJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Perspectiva Crist√£',
  url: 'https://perspectiva-crista-site.pages.dev/'
};

const blogJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Blog',
  name: 'Perspectiva Crist√£',
  url: 'https://perspectiva-crista-site.pages.dev/',
  description: 'Reflex√µes b√≠blicas, f√© e prop√≥sito para o dia a dia.'
};
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta name="google-site-verification" content="RdR1K5dk5nPw8wa2bULf1mpYafxkEdnLCYmcaJdhQVU" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#ffffff" />
    <link rel="canonical" href={canonicalUrl} />

    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:site_name" content="Perspectiva Crist√£" />
    <meta property="og:locale" content="pt_BR" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />
    <meta name="twitter:url" content={canonicalUrl} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700;800&display=swap"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700;800&display=swap"
      rel="stylesheet"
    />

    {preloadImageUrl && <link rel="preload" as="image" href={preloadImageUrl} fetchpriority="high" />}

    <script type="application/ld+json" set:html={JSON.stringify(organizationJsonLd)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteJsonLd)} />
    <script type="application/ld+json" set:html={JSON.stringify(blogJsonLd)} />
    <slot name="head" />

    <script is:inline>
      (() => {
        const storedTheme = localStorage.getItem('perspectiva-theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if ((storedTheme ?? (prefersDark ? 'dark' : 'light')) === 'dark') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>

    <style>
      :root {
        color-scheme: light;
        --bg: #f5efe8;
        --surface: #fffdf9;
        --surface-soft: #f7f1e8;
        --text: #1f1812;
        --text-soft: #5b4f43;
        --line: #ccbca9;
        --accent: #5c432f;
        --accent-hover: #3b2b1f;
        --focus: #0f62fe;
        --shadow-sm: 0 4px 14px rgba(43, 29, 18, 0.08);
        --shadow-lg: 0 16px 34px rgba(43, 29, 18, 0.16);
        --ui-font: 'Inter', 'Avenir Next', 'Segoe UI', Roboto, sans-serif;
        --heading-font: 'Playfair Display', 'Iowan Old Style', 'Palatino Linotype',
          Palatino, 'Times New Roman', serif;
      }

      .dark {
        color-scheme: dark;
        --bg: #14100d;
        --surface: #1e1712;
        --surface-soft: #251d16;
        --text: #f3e7d8;
        --text-soft: #d2bda7;
        --line: #4e3f31;
        --accent: #f7c58e;
        --accent-hover: #ffe2c0;
        --focus: #7eb7ff;
        --shadow-sm: 0 4px 14px rgba(0, 0, 0, 0.3);
        --shadow-lg: 0 18px 38px rgba(0, 0, 0, 0.46);
      }

      * { box-sizing: border-box; }

      body {
        margin: 0;
        background: var(--bg);
        color: var(--text);
        font-family: var(--heading-font);
        font-size: 1.0625rem;
        line-height: 1.68;
        text-rendering: optimizeLegibility;
        transition: background-color 220ms ease, color 220ms ease;
      }

      .container { max-width: 1200px; margin: 0 auto; padding: 0 24px; }
      .site-header { position: relative; border-bottom: 1px solid var(--line); }

      .nav-shell {
        height: clamp(70px, 6.4vw, 84px);
        background: color-mix(in srgb, var(--surface) 78%, transparent 22%);
        border-bottom: 1px solid color-mix(in srgb, var(--line) 82%, transparent 18%);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
      }

      .nav-inner { height: 100%; display: flex; align-items: center; justify-content: space-between; gap: 1rem; }
      .site-nav { display: inline-flex; align-items: center; flex-wrap: wrap; gap: 0.75rem; font-family: var(--ui-font); }

      .site-nav a {
        text-decoration: none;
        color: var(--text-soft);
        font-size: 0.93rem;
        font-weight: 600;
        letter-spacing: 0.01em;
        padding: 0.4rem 0.68rem;
        border-radius: 999px;
        border: 1px solid transparent;
        transition: color 180ms ease, border-color 180ms ease, background-color 180ms ease;
      }

      .site-nav a:hover,
      .site-nav a:focus-visible { color: var(--text); border-color: var(--line); background: var(--surface-soft); }

      .theme-toggle {
        display: inline-flex;
        align-items: center;
        gap: 0.45rem;
        border: 1px solid var(--line);
        border-radius: 999px;
        background: var(--surface-soft);
        color: var(--text);
        font-family: var(--ui-font);
        font-size: 0.85rem;
        font-weight: 600;
        padding: 0.38rem 0.62rem;
        cursor: pointer;
      }

      .hero {
        position: relative;
        height: 60vh;
        min-height: 390px;
        background-image: url('/images/header.png');
        background-size: cover;
        background-position: center;
      }

      .hero-overlay { position: absolute; inset: 0; background: linear-gradient(180deg, rgba(0, 0, 0, 0.28), rgba(0, 0, 0, 0.5)); }
      .hero-content { position: relative; z-index: 1; display: grid; align-content: end; height: 100%; padding-bottom: clamp(1.5rem, 4vw, 3rem); }
      .hero h1 { margin: 0; color: #fff; font-size: clamp(2rem, 1.1rem + 3vw, 3.35rem); }

      main { padding: clamp(1.25rem, 3vw, 2.4rem) 0; }
      footer { border-top: 1px solid var(--line); padding: 1.2rem 0; font-family: var(--ui-font); color: var(--text-soft); font-size: 0.88rem; }

      @media (max-width: 980px) {
        .hero { height: 66vh; min-height: 360px; background-position: center top; }
        .hero h1 { max-width: 14ch; }
      }

      @media (max-width: 720px) {
        .nav-inner { align-items: center; }
        .site-nav { gap: 0.45rem; }
        .site-nav a { font-size: 0.85rem; padding: 0.34rem 0.54rem; }
        .hero { min-height: 320px; }
      }
    </style>
  </head>

  <body>
    <header class="site-header">
      <div class="nav-shell">
        <div class="container nav-inner">
          <nav class="site-nav" aria-label="Principal">
            <a href="/">In√≠cio</a>
            <a href="/artigos/">Artigos</a>
            <a href="/recursos/">Recursos</a>
            <a href="/sobre/">Sobre</a>
          </nav>

          <button class="theme-toggle" id="theme-toggle" type="button" aria-label="Alternar tema">
            <span class="icon" aria-hidden="true">üåô</span>
            <span>Tema</span>
          </button>
        </div>
      </div>

      {
        Astro.url.pathname === '/' && (
          <section class="hero" role="banner" aria-label="Capa do site">
            <div class="hero-overlay"></div>
            <div class="container hero-content">
              <h1>Perspectiva Crist√£</h1>
            </div>
          </section>
        )
      }
    </header>

    <main>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer>
      <div class="container">¬© {new Date().getFullYear()} Perspectiva Crist√£</div>
    </footer>

    <script is:inline>
      (() => {
        const button = document.getElementById('theme-toggle');
        if (!button) return;

        const updateIcon = () => {
          const icon = button.querySelector('.icon');
          if (!icon) return;
          icon.textContent = document.documentElement.classList.contains('dark') ? '‚òÄÔ∏è' : 'üåô';
        };

        button.addEventListener('click', () => {
          document.documentElement.classList.toggle('dark');
          const theme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
          localStorage.setItem('perspectiva-theme', theme);
          updateIcon();
        });

        updateIcon();
      })();
    </script>
  </body>
</html>
