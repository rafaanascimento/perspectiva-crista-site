<BaseLayout
  title={title}
  description={description}
  image={coverImage}
  canonical={canonical}
  type="article"
>
  <article>
    <header class="post-header">
      <a class="back-link" href="/" aria-label="Voltar para a página inicial">
        <span class="back-icon" aria-hidden="true">←</span>
        <span>Voltar para a página inicial</span>
      </a>
      {series && <p class="series">Parte da série: {series}</p>}
      <h1>{title}</h1>
      <p class="meta">Por {author.name} • {formatDateBR(date)} • {readingTime}</p>
    </header>

    <img
      class="cover"
      src={coverImage}
      alt={`Capa do artigo ${title}`}
      width="1200"
      height="630"
      loading="lazy"
      onerror={`this.onerror=null;this.src='${fallbackCover}';`}
    />

    <hr class="divider" />

    <section class="content">
      <slot />
    </section>

    <AuthorCard author={author} />
  </article>
</BaseLayout>

<style>
  article {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    display: grid;
    gap: clamp(1.4rem, 1.1rem + 1vw, 2rem);
  }


  .series {
    margin: 0 0 0.55rem;
    font-family: var(--ui-font);
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.03em;
    color: var(--text-soft);
  }

  .post-header h1 {
    margin: 0;
    font-size: clamp(2rem, 1.22rem + 2.5vw, 3rem);
    line-height: 1.18;
    letter-spacing: -0.014em;
    color: var(--text);
    font-family: var(--heading-font);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    margin-bottom: 0.85rem;
    padding: 0.42rem 0.7rem;
    border-radius: 999px;
    border: 1px solid var(--line);
    background: var(--surface-soft);
    font-family: var(--ui-font);
    font-size: 0.88rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    text-decoration: none;
    color: var(--text-soft);
    transition: transform 0.2s ease, box-shadow 0.2s ease, color 0.2s ease,
      border-color 0.2s ease;
  }

  .back-link:hover,
  .back-link:focus-visible {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
    color: var(--text);
    border-color: color-mix(in srgb, var(--line) 72%, var(--accent) 28%);
  }

  .meta {
    margin: 0.7rem 0 0;
    font-family: var(--ui-font);
    font-size: 0.92rem;
    color: var(--text-soft);
  }

  .cover {
    width: 100%;
    max-width: 100%;
    display: block;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    margin: 0 auto;
    border-radius: 0.9rem;
    border: 1px solid var(--line);
    background: var(--surface-soft);
    box-shadow: var(--shadow-sm);
  }

  .divider {
    margin: 0;
    border: 0;
    border-top: 1px solid var(--line);
  }

  .content {
    width: 100%;
    font-size: clamp(1.05rem, 1rem + 0.2vw, 1.12rem);
    line-height: 1.82;
    color: var(--text);
  }

  .content :global(p) {
    margin: 0 0 1.1em;
  }

  .content :global(h2),
  .content :global(h3) {
    margin: 1.7em 0 0.7em;
    color: var(--text);
    font-family: var(--heading-font);
    line-height: 1.32;
  }

  .content :global(h2) {
    font-size: clamp(1.42rem, 1.1rem + 1vw, 1.9rem);
  }

  .content :global(h3) {
    font-size: clamp(1.18rem, 1rem + 0.58vw, 1.42rem);
  }

  .content :global(blockquote) {
    margin: 1.25em 0;
    padding: 0.72em 0.9em;
    border-left: 3px solid color-mix(in srgb, var(--accent) 60%, var(--line) 40%);
    background: var(--surface-soft);
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 0.25em 0 1.2em;
    padding-left: 1.4em;
  }

  .content :global(li + li) {
    margin-top: 0.45em;
  }
</style>
