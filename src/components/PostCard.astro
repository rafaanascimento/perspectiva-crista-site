---
interface Props {
  url: string;
  cover: string;
  title: string;
  displayTitle: string;
  formattedDate: string;
  author: string;
  readingTime: string;
  fallbackCover: string;
}

const { url, cover, title, displayTitle, formattedDate, author, readingTime, fallbackCover } = Astro.props;
---

<article class="post-card">
  <a href={url}>
    <div class="card-image">
      <img
        src={cover}
        alt={`Capa do artigo ${title}`}
        width="960"
        height="1200"
        loading="lazy"
        onerror={`this.onerror=null;this.src='${fallbackCover}';`}
      />
    </div>
    <div class="card-content">
      <h3>{displayTitle}</h3>
      <p class="meta">{formattedDate} • {author} • {readingTime}</p>
    </div>
  </a>
</article>

<style>
  .post-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card > a {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    overflow: hidden;
    border-radius: 1rem;
    border: 1px solid var(--line);
    background: var(--surface);
    box-shadow: var(--shadow-sm);
    transition: transform 0.2s ease, box-shadow 0.2s ease,
      border-color 0.2s ease, background-color 0.2s ease;
  }

  .post-card > a:hover,
  .post-card > a:focus-visible {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: color-mix(in srgb, var(--line) 68%, var(--accent) 32%);
  }

  .card-image {
    aspect-ratio: 4 / 5;
    overflow: hidden;
    border-bottom: 1px solid var(--line);
    background: var(--surface-soft);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex-grow: 1;
    min-height: 9.8rem;
    padding: clamp(1rem, 1.5vw, 1.4rem);
  }

  h3 {
    margin: 0;
    font-size: clamp(1.15rem, 1rem + 0.7vw, 1.48rem);
    line-height: 1.35;
    color: var(--text);
    font-family: var(--heading-font);
  }

  .meta {
    margin: 0.62rem 0 0;
    font-family: var(--ui-font);
    font-size: clamp(0.86rem, 0.82rem + 0.2vw, 0.94rem);
    line-height: 1.55;
    color: var(--text-soft);
  }
</style>
