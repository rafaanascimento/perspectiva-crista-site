---
interface Props {
  title?: string;
  text?: string;
  primaryLabel?: string;
  primaryHref?: string;
  secondaryLabel?: string;
  secondaryHref?: string;
}

const {
  title = 'Aprofunde sua caminhada',
  text = 'Receba reflexões bíblicas e conteúdos que fortalecem sua fé e propósito.',
  primaryLabel = 'Explorar Artigos',
  primaryHref = '/artigos/',
  secondaryLabel = 'Sobre o Projeto',
  secondaryHref = '/sobre/'
} = Astro.props;
---

<section class="cta" aria-label="Chamada para ação">
  <div class="cta-content">
    <h2>{title}</h2>
    <p>{text}</p>
    <div class="cta-actions">
      <a class="btn btn-primary" href={primaryHref}>{primaryLabel}</a>
      <a class="btn btn-secondary" href={secondaryHref}>{secondaryLabel}</a>
    </div>
  </div>
</section>

<style>
  .cta {
    margin-top: 2.4rem;
    border: 1px solid var(--line);
    border-radius: 1rem;
    background: color-mix(in srgb, var(--surface) 86%, var(--surface-soft) 14%);
    box-shadow: var(--shadow-sm);
    padding: clamp(1.1rem, 1rem + 1vw, 1.8rem);
  }

  .cta-content {
    display: grid;
    gap: 0.85rem;
  }

  .cta h2 {
    margin: 0;
    font-size: clamp(1.4rem, 1.2rem + 1vw, 2rem);
    line-height: 1.2;
    color: var(--text);
  }

  .cta p {
    margin: 0;
    font-family: var(--ui-font);
    color: var(--text-soft);
    line-height: 1.65;
    max-width: 62ch;
  }

  .cta-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.7rem;
    margin-top: 0.25rem;
  }

  .btn {
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.65rem;
    border: 1px solid transparent;
    font-family: var(--ui-font);
    font-size: 0.9rem;
    font-weight: 600;
    padding: 0.6rem 0.92rem;
    transition: transform 180ms ease, filter 180ms ease, box-shadow 180ms ease,
      border-color 180ms ease, background-color 180ms ease;
  }

  .btn:hover,
  .btn:focus-visible {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  .btn-primary {
    color: #fff;
    background: var(--accent);
    border-color: color-mix(in srgb, var(--accent) 75%, var(--line) 25%);
  }

  .btn-primary:hover,
  .btn-primary:focus-visible {
    filter: brightness(0.95);
  }

  .btn-secondary {
    color: var(--text);
    background: var(--surface-soft);
    border-color: var(--line);
  }

  .btn-secondary:hover,
  .btn-secondary:focus-visible {
    background: var(--surface);
  }

  .dark .btn-primary {
    color: #1c130d;
  }

  @media (max-width: 640px) {
    .cta-actions {
      flex-direction: column;
      align-items: stretch;
    }

    .btn {
      width: 100%;
    }
  }
</style>
