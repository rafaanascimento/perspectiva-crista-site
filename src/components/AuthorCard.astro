---
interface Props {
  author: {
    name: string;
    avatar: string;
    role: string;
    bio: string;
  };
}

const { author } = Astro.props;

const fallbackAvatar =
  "data:image/svg+xml;utf8," +
  encodeURIComponent(`
<svg xmlns='http://www.w3.org/2000/svg' width='88' height='88' viewBox='0 0 88 88'>
  <rect width='88' height='88' fill='#E5E7EB'/>
  <circle cx='44' cy='33' r='16' fill='#9CA3AF'/>
  <rect x='18' y='55' width='52' height='22' rx='11' fill='#9CA3AF'/>
</svg>
`);
---

<section class="author-card" aria-label="Informações do autor">
  <img
    src={author.avatar}
    alt={`Foto de ${author.name}`}
    width="88"
    height="88"
    loading="lazy"
    onerror={`this.onerror=null;this.src='${fallbackAvatar}';`}
  />

  <div class="text">
    <p class="role">{author.role}</p>
    <h3>{author.name}</h3>
    <p class="bio">{author.bio}</p>
  </div>
</section>

<style>
  .author-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 0.3rem;
    padding: 1rem 1.1rem;
    border-radius: 0.9rem;
    background: var(--surface);
    border: 1px solid var(--line);
    box-shadow: var(--shadow-sm);
  }

  img {
    border-radius: 9999px;
    object-fit: cover;
    background: var(--surface-soft);
    border: 1px solid var(--line);
    flex: 0 0 auto;
  }

  .text {
    min-width: 0;
  }

  .role {
    margin: 0;
    font-family: var(--ui-font);
    font-size: 0.76rem;
    text-transform: uppercase;
    letter-spacing: 0.11em;
    color: var(--text-soft);
  }

  h3 {
    margin: 0.28rem 0 0.3rem;
    font-size: 1.15rem;
    line-height: 1.25;
    color: var(--text);
    font-family: var(--heading-font);
  }

  .bio {
    margin: 0;
    font-size: 0.97rem;
    line-height: 1.55;
    color: var(--text-soft);
    font-family: var(--ui-font);
  }

  @media (max-width: 640px) {
    .author-card {
      align-items: flex-start;
      padding: 0.95rem;
    }

    .bio {
      font-size: 0.94rem;
    }
  }
</style>
